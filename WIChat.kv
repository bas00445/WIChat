                        background_normal: ''
                        background_color: 0.000, 0.314, 0.541, 1


        AccordionItem:
            title: 'Available Contacts'
            background_selected: 'accordionBG_normal.png'
            background_normal: 'accordionBG_selected.png'

            ScrollView:
                size: self.parent.width, self.parent.height
                size_hint: None,None
                GridLayout:
                    id: contactScrollView
                    cols: 1
                    padding: 2.5
                    spacing: 5
                    size_hint: None,None
                    height: self.minimum_height

<HistoryScreen>:
