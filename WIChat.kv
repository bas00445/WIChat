        background_normal: ''
        background_color: 0.196, 0.663, 0.914,  1
        size_hint: .3, 1
        font_size: '15sp'
        id: nameButton

        on_press: app.root.mainUIScreen.moveto_chatroom(idButton.text, nameButton.text)

    BoxLayout:
        orientation: 'vertical'

        Label:
            id: idButton
